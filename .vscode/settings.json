{
    // Place your settings here
    // Each entry must be in double quotes

    // Editor settings
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "on",

    // Language-specific settings
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },

    // Workspace settings
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true
    },

    // Extensions settings
    "python.pythonPath": "./venv/bin/python",
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "cSpell.ignoreWords": [
        "connex",
        "connexion",
        "sqlalchemy"
    ]
}